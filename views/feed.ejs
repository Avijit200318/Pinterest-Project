<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen px-2 pt-4 pb-20 md:px-4 md:pt-12 lg:py-8 xl:py-8">
        <div class="cards flex flex-wrap justify-center px-2 gap-2 sm:justify-start sm:gap-[0.5rem]">
            <% posts.reverse().forEach(function(ele) { %>
                <div class=" card w-40 sm:w-[32.3%] md:w-[24.1%] lg:w-[19.3%] 2xl:w-[16.1%]">
                    <div class="w-full h-60 bg-sky-200 rounded-lg overflow-hidden sm:h-[20rem]">
                        <a href="/show/post/<%= ele._id%>">
                            <img src="data:<%= ele.image.contentType %>;base64,<%= ele.image.data.toString('base64') %>" class="w-full h-full object-cover" alt="">
                    </a>
                    </div>
                    <a href="/show/post/<%= ele._id%>" class="mt-2 text-sm ml-2 sm:ml-4">
                        <%=ele.title %>
                    </a>
                    <h6 class="text-xs font-semibold opacity-50 ml-2 sm:ml-4">@<%= ele.user.username %></h6>
                </div>
                <% }) %>
                
        </div>
    </div>
    <% include ./partials/footer.ejs %>