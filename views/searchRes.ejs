<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen px-2 pt-4 pb-20 md:px-4 md:pt-12 lg:px-10 lg:py-8 xl:px-10 xl:py-8">
        <div class="cards flex flex-wrap justify-center px-2 gap-2 md:justify-start md:gap-6  md:px-8 xl:px-10 2xl:px-20">
            <% if(searchPost.length == 0){ %>
                <h1 class="text-3xl text-red-500 font-semibold sm:text-5xl">No Matches Found. Try a Different Search...<i class="fa-regular fa-circle-xmark"></i></h1>
            <% } %>
            <% searchPost.forEach(function(ele) { %>
                <div class="card w-40 sm:w-48">
                    <div class="w-full h-60 bg-sky-200 rounded-lg overflow-hidden sm:h-80">
                        <a href="/show/post/<%= ele._id %>">
                            <img src="data:<%= ele.image.contentType %>;base64,<%= ele.image.data.toString('base64') %>" class="w-full h-full object-cover" alt="">
                    </a>
                    </div>
                    <h5 class="mt-2 text-sm">
                        <%=ele.title %>
                    </h5>
                </div>
                <% }) %>
        </div>
    </div>
    <% include ./partials/footer.ejs %>